syntax on
set nu
set autoindent
set expandtab
set tabstop=4
set shiftwidth=4
set mouse=a

let g:loaded_matchparen = 1

runtime! ftplugin/man.vim

nmap <C-n> : NERDTreeToggle<CR>

" -- Pluggins --

set laststatus=2

call plug#begin()

Plug 'https://github.com/itchyny/lightline.vim.git'

Plug 'preservim/nerdtree'

Plug 'jiangmiao/auto-piars'

call plug#end()
